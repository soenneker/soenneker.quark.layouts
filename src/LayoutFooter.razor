@inherits Soenneker.Quark.Element

<footer @attributes="BuildAttributes()">
	@ChildContent
</footer>

@code {
    public override string? Name { get; set; } = "LayoutFooter";

	protected override Dictionary<string, object> BuildAttributes()
	{
		Dictionary<string, object> attributes = base.BuildAttributes();
    		AppendToClassAttr(attributes, "bg-body-tertiary border-top mt-auto");
		return attributes;
	}
}
